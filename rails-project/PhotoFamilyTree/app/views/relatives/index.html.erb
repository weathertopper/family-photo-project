<div class="parallax-container" data-offset="50" data-spy="scroll" data-target='#scrollspy-nav'>
	<div class="parallax-layer background">
	</div>


	<div class="parallax-layer foreground">
		<div class="container-fluid">
			<p id="notice"><%= notice %>
			</p>


			<h1>Relatives</h1>

			<%pre_progressive_relatives = get_pre_progressive_generation(@all_relatives)%>
            <%progressive_relatives = get_progressive_generation(@all_relatives)%>
            <%missionary_relatives = get_missionary_generation(@all_relatives)%>
            <%lost_relatives = get_lost_generation(@all_relatives)%>
            <%gi_relatives = get_gi_generation(@all_relatives)%>
            <%silent_relatives = get_silent_generation(@all_relatives)%>
            <%boomer_relatives = get_boomer_generation(@all_relatives)%>
            <%x_relatives = get_x_generation(@all_relatives)%>
            <%millennial_relatives = get_millennial_generation(@all_relatives)%>
            <%z_relatives = get_z_generation(@all_relatives)%>

			<div class="relatives">
				<div class="row  row-centered">
					<h3 id='pre-progressive-header'>Pre-Progressive</h3>
					<%= render partial: "relative_tile", collection: pre_progressive_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='progressive-header'>Progressive</h3>
					<%= render partial: "relative_tile", collection: progressive_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='missionary-header'>Missionary</h3>
					<%= render partial: "relative_tile", collection: missionary_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='lost-header'>Lost</h3>
					<%= render partial: "relative_tile", collection: lost_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='gi-header'>GI</h3>
					<%= render partial: "relative_tile", collection: gi_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='silent-header'>Silent</h3>
					<%= render partial: "relative_tile", collection: silent_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='boomer-header'>Baby Boomer</h3>
					<%= render partial: "relative_tile", collection: boomer_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='x-header'>Generation X</h3>
					<%= render partial: "relative_tile", collection: x_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='millenial-header'>Millennial</h3>
					<%= render partial: "relative_tile", collection: millennial_relatives, :as => :relative %>
				</div>

				<hr>


				<div class="row  row-centered">
					<h3 id='z-header'>Generation Z</h3>
					<%= render partial: "relative_tile", collection: z_relatives, :as => :relative %>
				</div>
			</div>
			<br>


			<div class="links">
				<%= link_to 'Add Relative', new_relative_path %><%= link_to 'Photos', '../photos' %>
			</div>
		</div>
	</div>
</div>
